{
    "name": "Social Blocker",
    "description": "Social Blocker is a chrome extension developed by M. H. Nahib. The extension can block a bunch of social media websites and make you productive again.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/logo16.png",
            "32": "/images/logo32.png",
            "48": "/images/logo48.png",
            "128": "/images/logo128.png"
        }
    },
    "icons": {
        "16": "/images/logo16.png",
        "32": "/images/logo32.png",
        "48": "/images/logo48.png",
        "128": "/images/logo128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "/css/styles.css"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ]
}